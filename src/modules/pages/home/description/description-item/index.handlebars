<div class="modules-pages-home-description-item {{#if right-images}}modules-pages-home-description-item_right-images{{/if}}">
    <div class="modules-pages-home-description-item__images-block">
        <div class="modules-pages-home-description-item__main-image-container">
            <img class="modules-pages-home-description-item__main-image" src="{{main-image}}" alt="Mobile app screen shot">
            <img class="modules-pages-home-description-item__second-image" src="{{second-image}}" alt="">
        </div>
    </div>
    <div class="modules-pages-home-description-item__content-block">
        <div class="modules-pages-home-description-item__content">
            <img class="modules-pages-home-description-item__content-icon" src="{{icon}}" alt="">
            <h2 class="modules-pages-home-description-item__content-header">{{{header-text}}}</h2>
            <p class="modules-pages-home-description-item__content-text">{{first-text}}</p>
            <p class="modules-pages-home-description-item__content-text">{{second-text}}</p>
        </div>
    </div>
</div>
